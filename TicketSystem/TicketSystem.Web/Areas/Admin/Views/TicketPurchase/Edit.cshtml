@model TicketPurchaseEditModel
@{
    ViewData["Title"] = "Edit ticket";
    ViewData["PageNav"] = "Edit ticket";
}

<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
            <h3 class="card-title">Edit ticket</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form role="form" asp-controller="TicketPurchase" asp-action="Edit" method="post" asp-antiforgery="true" >
                <input type="hidden" asp-for="Id" />
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CustomerName">Name</label>
                        <input type="text" class="form-control" asp-for="CustomerName" id="name">
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerAddress">Address</label>
                        <input type="text" class="form-control" asp-for="CustomerAddress" id="address">
                        <span asp-validation-for="CustomerAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SeatNumber">SeatNumber</label>
                        <input type="text" class="form-control" asp-for="SeatNumber" id="seatNumber">
                        <span asp-validation-for="SeatNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TicketPrice">Price</label>
                        <input type="text" class="form-control" asp-for="TicketPrice" id="price">
                        <span asp-validation-for="TicketPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BusNumber">BusNumber</label>
                        <input type="text" class="form-control" asp-for="BusNumber" id="busNumber">
                        <span asp-validation-for="BusNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                            <label>Date and time:</label>
                            <div class="input-group date" id="reservationdatetime" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input" asp-for="OnboardingTime" data-target="#reservationdatetime" />
                                <div class="input-group-append" data-target="#reservationdatetime" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <a asp-action="Index" asp-controller="TicketPurchase" asp-area="Admin" class="btn btn-default">Cancel</a>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        <!-- /.card -->
        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</div><!-- /.container-fluid -->

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>

    $(function () {
        $('#reservationdatetime').datetimepicker({ icons: { time: 'far fa-clock' },
            
        })
    });
</script>
}