@{
    ViewData["Title"] = "All Tickets";
    ViewData["PageNav"] = "Tickets";
}
@section Styles
{
<!-- DataTables -->
<link rel="stylesheet" href="/adminlte/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-6">
                <div class="float-left">
                    <h3 class="card-title">Currently Available Tickets</h3>
                </div>
            </div>
            <div class="col-6">
                <div class="float-right">
                    <a asp-action="Create" asp-controller="TicketPurchase" class="btn btn-outline-info btn-sm">Add Course<i class="fa fa-plus ml-2"></i> </a>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="tickets" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Customer Address</th>
                    <th>Seat Number</th>
                    <th>Ticket Price</th>
                    <th>Bus Number</th>
                    <th>On Boarding Time </th>
                    <th style="width:20%">Actions</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Customer Name</th>
                    <th>Customer Address</th>
                    <th>Seat Number</th>
                    <th>Ticket Price</th>
                    <th>Bus Number</th>
                    <th>On Boarding Time </th>
                    <th>Actions</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
    <partial name="_ModalPartial" />
</div>
<!-- /.card -->
@section Scripts
{
<!-- DataTables -->
<script src="/adminlte/plugins/datatables/jquery.dataTables.js"></script>
<script src="/adminlte/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
<script>
    $(function () {
        $('#tickets').DataTable({
            "processing": true,
            "serverSide": true,
            "ajax": {
                "url": "/admin/ticketpurchase/getTickets",
            },
            "columnDefs": [
                {
                    "orderable": false,
                    "targets": 6,
                    "render": function (data, type, row) {
                        return `<button type="submit" class="btn btn-info btn-sm" onclick="window.location.href='/admin/ticketpurchase/edit/${data}'" value='${data}'>
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Edit
                                </button>
                                <button type="submit" class="btn btn-danger btn-sm show-bs-modal" data-id='${data}' value='${data}'>
                                    <i class="fas fa-trash">
                                    </i>
                                    Delete
                                </button>`;
                    }
                }
            ]
        });

        $('#tickets').on('click', '.show-bs-modal', function (event) {
            var id = $(this).data("id");
            var modal = $("#modal-default");
            modal.find('.modal-body p').text('Are you sure you want to delete this record?');
            $("#deleteId").val(id);
            $("#deleteForm").attr("action", "/admin/ticketpurchase/delete");
            modal.modal('show');
        });

        $("#deleteButton").click(function () {
            $("#deleteForm").submit();
        });
    });
</script>

}

